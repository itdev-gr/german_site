---
import TopBar from "../components/TopBar.astro";
import Nav from "../components/Nav.astro";

interface Props {
	title?: string;
	description?: string;
}

const { title = "Naturfreundehaus Wagbachhäusel | Disho", description = "Gemütlicher Treffpunkt am Wagbach. Vollbewirtschaftet, regionale Küche, Biergarten, kinderfreundlich." } = Astro.props;
---

<!DOCTYPE html>
<html lang="de">
	<head>
		<meta charset="utf-8" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="icon" href="/favicon.ico" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link href="https://fonts.googleapis.com/css2?family=Bodoni+Moda:ital,wght@0,400;0,500;0,600;0,700;1,400&family=Cormorant+Garamond:ital,wght@0,400;0,600;0,700;1,400&family=Source+Sans+3:wght@400;500;600;700&display=swap" rel="stylesheet" />
		<title>{title}</title>
	</head>
	<body>
		<div class="page-wrapper">
			<TopBar />
			<Nav />
			<slot />
		</div>
	</body>
</html>

<style is:global>
	* {
		box-sizing: border-box;
		margin: 0;
		padding: 0;
	}

	:root {
		--color-bg: #f5f0e8;
		--color-bg-cream: #faf8f5;
		--color-bg-page: #fdf8f5;
		--color-surface: #fff;
		--color-text: #2c3e2c;
		--color-text-muted: #4a5d4a;
		--color-green-dark: #1e3c1e;
		--color-green-hero: #2d4a2d;
		--color-accent: #c17a4a;
		--color-accent-hover: #a66a3f;
		--color-orange-star: #c17a4a;
		--color-footer-bg: #242d15;
		--font-serif: "Cormorant Garamond", Georgia, serif;
		--font-serif-didone: "Bodoni Moda", "Bodoni MT", Didot, "Times New Roman", serif;
		--font-sans: "Source Sans 3", "Segoe UI", system-ui, sans-serif;
	}

	html {
		font-size: 18px;
		scroll-behavior: smooth;
	}

	body {
		font-family: var(--font-sans);
		background: #f5f2ee;
		color: var(--color-text);
		line-height: 1.6;
		min-height: 100vh;
	}

	.page-wrapper {
		max-width: 1400px;
		margin: 0 auto;
		padding: 0 2rem;
		min-height: 100vh;
	}

	h1, h2, h3, .font-serif {
		font-family: var(--font-serif);
	}
</style>
