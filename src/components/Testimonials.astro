---
// Testimonials: 3 quote blocks + Instagram CTA (collage left, text + button right)
const testimonials = [
	{
		text: "Wir haben hier sehr gut gegessen. Die Bedienung ist aufmerksam und freundlich, die Preise sehr angemessen. Wir kommen gerne wieder.",
		author: "Karlheinz Münzer, Google-Bewertung",
	},
	{
		text: "Sehr sehr herzlich. Tolles leckeres Essen, sehr schönes und heimisches Lokal. Es war einfach spitze. Danke für die Gastfreundlichkeit.",
		author: "Jochen, Google-Bewertung",
	},
	{
		text: "Das Essen ist sehr lecker und der Service total freundlich. Wir essen gerne hier.",
		author: "Sally, Google-Bewertung",
	},
];
const collageImages = ["/images/section-1.png", "/images/section-2.png", "/images/section-3.png", "/images/section-4.png", "/images/section-5.png"];
---

<section class="testimonials">
	<div class="testimonials-inner">
		<h2 class="testimonials-heading">Was Gäste sagen</h2>
		<div class="testimonials-grid">
			{testimonials.map((t) => (
				<blockquote class="testimonial-card">
					<p class="testimonial-text">"{t.text}"</p>
					<cite class="testimonial-author">{t.author}</cite>
				</blockquote>
			))}
		</div>
	</div>
	<div class="instagram-cta">
		<div class="instagram-inner">
			<div class="instagram-collage" id="instagram-collage">
				{collageImages.map((src, i) => (
					<div class="collage-item" data-index={i} style={`--rot-stack: ${[-4, 0, 2, -3, 3][i]}deg; --z: ${i};`}>
						<img src={src} alt="" width="200" height="200" loading="lazy" />
					</div>
				))}
			</div>
			<div class="instagram-content">
				<h2 class="instagram-title">
					Für schöne<br />
					Momente am<br />
					Wagbach
				</h2>
				<p class="instagram-handle">@wagbachausl</p>
				<a href="https://instagram.com/wagbachausl" target="_blank" rel="noopener noreferrer" class="instagram-btn">Follow us on Instagram</a>
			</div>
		</div>
	</div>
</section>

<script>
	const collage = document.getElementById("instagram-collage");
	if (collage) {
		const observer = new IntersectionObserver(
			(entries) => {
				entries.forEach((entry) => {
					if (entry.isIntersecting) {
						collage.classList.add("is-visible");
					}
				});
			},
			{ threshold: 0.2 }
		);
		observer.observe(collage);
	}
</script>

<style>
	.testimonials {
		background: #f5f2ee;
		padding: 4rem 1.5rem 2rem;
	}

	.testimonials-inner {
		max-width: 1200px;
		margin: 0 auto;
	}

	.testimonials-heading {
		font-family: var(--font-serif);
		font-size: clamp(1.75rem, 2.5vw, 2.25rem);
		font-weight: 600;
		color: #365D4F;
		text-align: center;
		margin-bottom: 2rem;
	}

	.testimonials-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		gap: 2rem;
	}

	.testimonial-card {
		background: #fdf8f5;
		padding: 2rem 1.75rem;
		border-radius: 0.5rem;
		margin: 0;
		text-align: center;
	}

	.testimonial-text {
		font-family: var(--font-sans);
		font-size: 1rem;
		line-height: 1.65;
		color: #333333;
		margin-bottom: 1rem;
	}

	.testimonial-author {
		font-family: var(--font-sans);
		font-size: 0.9rem;
		color: #7a7776;
		font-style: normal;
		font-weight: 500;
	}

	.instagram-cta {
		background: #f5f2ee;
		padding: 4rem 1.5rem;
		margin-top: 2rem;
	}

	.instagram-inner {
		max-width: 1200px;
		margin: 0 auto;
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 3rem;
		align-items: center;
	}

	.instagram-collage {
		position: relative;
		height: 403px;
		display: flex;
		align-items: center;
		justify-content: center;
		border-radius: 0.5rem;
	}

	.collage-item {
		position: absolute;
		width: 230px;
		height: 288px;
		background: #fff;
		padding: 6px;
		box-shadow: 0 4px 20px rgba(0,0,0,0.25);
		border-radius: 2px;
		left: 50%;
		top: 50%;
		transform: translate(-50%, -50%) rotate(var(--rot-stack, 0deg));
		z-index: var(--z, 0);
		transition: transform 0.75s ease-out, left 0.75s ease-out, top 0.75s ease-out, right 0.75s ease-out, bottom 0.75s ease-out;
	}

	/* Open state: 5 photos, ~20% more spacing, varied rotations, white borders. */
	.instagram-collage.is-visible .collage-item[data-index="0"] {
		left: 44%;
		top: 23%;
		right: auto;
		bottom: auto;
		transform: translate(-50%, -50%) rotate(-5deg);
		z-index: 2;
	}

	.instagram-collage.is-visible .collage-item[data-index="1"] {
		left: 84%;
		top: 20%;
		right: auto;
		bottom: auto;
		transform: translate(-50%, -50%) rotate(4deg);
		z-index: 4;
	}

	.instagram-collage.is-visible .collage-item[data-index="2"] {
		left: 39%;
		top: 80%;
		right: auto;
		bottom: auto;
		transform: translate(-50%, -50%) rotate(3deg);
		z-index: 7;
	}

	.instagram-collage.is-visible .collage-item[data-index="3"] {
		left: 76%;
		top: 83%;
		right: auto;
		bottom: auto;
		transform: translate(-50%, -50%) rotate(-4deg);
		z-index: 6;
	}

	.instagram-collage.is-visible .collage-item[data-index="4"] {
		left: 108%;
		top: 85%;
		right: auto;
		bottom: auto;
		transform: translate(-50%, -50%) rotate(2deg);
		z-index: 5;
	}

	@media (prefers-reduced-motion: reduce) {
		.collage-item {
			transition: none;
		}
	}

	.collage-item:hover {
		z-index: 10;
	}

	.collage-item img {
		width: 100%;
		height: 100%;
		object-fit: cover;
		display: block;
		border-radius: 1px;
	}

	.instagram-content {
		text-align: center;
	}

	.instagram-title {
		font-family: var(--font-serif);
		font-size: clamp(2.625rem, 3.75vw, 3.375rem);
		font-weight: 400;
		color: #1a1f1a;
		margin-bottom: 0.5rem;
		line-height: 1.5;
	}

	.instagram-handle {
		font-size: 1.1rem;
		color: var(--color-text-muted);
		margin-bottom: 1.5rem;
	}

	.instagram-btn {
		display: inline-block;
		background: var(--color-accent);
		color: white;
		padding: 0.65rem 1.5rem;
		border-radius: 0;
		text-decoration: none;
		font-weight: 600;
		font-size: 1rem;
		transition: background 0.2s, transform 0.15s;
	}

	.instagram-btn:hover {
		background: var(--color-accent-hover);
		transform: translateY(-2px);
	}

	@media (max-width: 768px) {
		.testimonials-grid {
			grid-template-columns: 1fr;
			max-width: 24rem;
			margin: 0 auto;
		}

		.instagram-inner {
			grid-template-columns: 1fr;
			gap: 2rem;
		}

		.instagram-collage {
			order: 1;
			height: 345px;
		}

		.collage-item {
			width: 173px;
			height: 216px;
		}

		.instagram-content {
			order: 2;
			text-align: center;
		}
	}
</style>
